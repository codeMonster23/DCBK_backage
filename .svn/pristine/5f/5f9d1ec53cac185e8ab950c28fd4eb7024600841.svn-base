    <script>
	    //编辑
	  $(".items").on("click",".item .btn1",function(){
		  var text=$(this).siblings("p").text()
		  $(this).parent().addClass("edit").children().hide()
		  $(this).siblings(".editwrap").show()
		  $(this).siblings(".editwrap").find("input").val(text)
		  })
      $(".items").on("click",".editwrap .btn3",function(){
		  var value=$(this).siblings("input").val()
		  $(this).parent().hide().siblings().show()
		  $(this).parent().siblings("p").text(value)
		  $(this).parents(".item").removeClass("edit")
		  })
		 $(".items ").on("click",".editwrap .btn4",function(){
			 $(this).parent().hide().siblings().show()
			  $(this).parents(".item").removeClass("edit")
			 })
	 //新建
